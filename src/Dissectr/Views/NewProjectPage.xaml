<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:Dissectr.ViewModels"
             x:Class="Dissectr.Views.NewProjectPage"
             Title="NewProject">
    <ContentPage.BindingContext>
        <viewModels:NewProjectViewModel />
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Text="Name"
            VerticalOptions="Center"
            HorizontalOptions="End" />
        <Entry
            Grid.Row="0"
            Grid.Column="1"
            Margin="10,0,0,0"
            Placeholder="Project Name"
            VerticalOptions="Center"
            Text="{Binding ProjectName}" />
        <Label
            Grid.Row="1"
            Grid.Column="0"
            Text="Interval Length:"
            VerticalOptions="Center"
            HorizontalOptions="End"/>
        <HorizontalStackLayout
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,0,0,0"
            Spacing="10">
            <Label
                VerticalOptions="Center"
                Text="{Binding Path=IntervalLength, StringFormat='{0:hh\\:mm\\:ss}'}" />
            <Stepper
                Minimum="5"
                Maximum="60"
                Value="10"
                Increment="5">
                <Stepper.Behaviors>
                    <toolkit:EventToCommandBehavior
                        x:TypeArguments="ValueChangedEventArgs"
                        EventName="ValueChanged"
                        Command="{Binding IntervalLengthChanged}" />
                </Stepper.Behaviors>
            </Stepper>
        </HorizontalStackLayout>
        <CollectionView
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="2"
            ItemsSource="{Binding Dimensions}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        CornerRadius="5"
                        Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                Grid.Row="0"
                                HorizontalOptions="End"
                                VerticalOptions="Center"
                                Text="Name" />
                            <Entry
                                Grid.Column="1"
                                Grid.Row="0"
                                Margin="10,0,0,0"
                                Text="{Binding Name}" />
                            <Label
                                Grid.Column="0"
                                Grid.Row="1"
                                HorizontalOptions="End"
                                VerticalOptions="Center"
                                Text="Optional" />
                            <CheckBox
                                Grid.Column="1"
                                Grid.Row="1"
                                Margin="10,0,0,0"
                                IsChecked="{Binding Optional}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>